    <script src="~/Areas/Admin/Scripts/quoteReview/quoteReview.controller.js"></script>
    <script src="~/Areas/Admin/Scripts/review/review.controller.js"></script>
    <script src="~/Areas/Admin/Scripts/student/student.controller.js"></script>
    <script src="~/Areas/Admin/Scripts/roomsReview/rooms-review.controller.js"></script>
    <script src="~/Areas/Admin/Scripts/accounts/accounts.controller.js"></script>
