@{
    Layout = "~/Views/Shared/Layout.cshtml";
}
@using Settlement.Web.Models;
@section HeadScripts
{
    <base href="/Warden/Default/" />
}
@section PageHeader
{
<div ng-app="settlementModule">
    <div layout="row" style="padding:10px">
        <div>
            <button class="btn btn-default" onclick="location.href='/Warden/Default/Index/Rooms'" style="text-decoration:solid; font-size:20px">
                Settlements
            </button>
            <button class="btn btn-default" onclick="location.href = '/Warden/Default/Index/Review'"; style="text-decoration:solid; font-size:20px" ng-click="lc.GoToReview()">
                Students
            </button>
            <button class="btn btn-default" onclick="location.href = '/Warden/Default/Index/Quotes'" style="text-decoration:solid; font-size:20px">
                Quotes
            </button>
            <a style="float:right" class="btn btn-default" href="/Account/LogOut">
                Logout
            </a>
            <label class="btn" style="float:right; font-size:17px">
                @User.Identity.Name
            </label>
        </div>
        }
        <div style="z-index: 5" data-loading class="cssload-container centered">
            <div class="cssload-speeding-wheel"></div>
        </div>
        <div style="z-index: 2" ng-view> </div>
    </div>
</div>
